<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/bSpeak"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:background="@drawable/buttoncharacter"
            android:padding="8dp"
            android:tint="@color/icon"
            android:src="@android:drawable/ic_lock_silent_mode_off"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/bMic"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:background="@drawable/buttoncharacter"
            android:tint="@color/icon"
            android:src="@android:drawable/ic_btn_speak_now"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <com.example.titan.dyscalculator.customButton
            android:id="@+id/bEuro"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:background="@drawable/buttoncharacter"
            android:text="â‚¬"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/bClear"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:background="@drawable/buttoncharacter"
            android:tint="@color/icon"
            android:src="@android:drawable/ic_menu_delete"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/bDelete"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:background="@drawable/buttoncharacter"
            android:tint="@color/icon"
            android:src="@android:drawable/ic_input_delete"/>
        <com.example.titan.dyscalculator.customButton
            android:id="@+id/bDivide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:background="@drawable/buttoncharacter"
            android:text=":"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <com.example.titan.dyscalculator.customButton
            android:id="@+id/b7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:background="@drawable/buttonnumber"
            android:text="7"
            />
        <com.example.titan.dyscalculator.customButton
            android:id="@+id/b8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:background="@drawable/buttonnumber"
            android:text="8"
            />
        <com.example.titan.dyscalculator.customButton
            android:id="@+id/b9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:background="@drawable/buttonnumber"
            android:text="9"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/bMultiply"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:background="@drawable/buttoncharacter"
            android:tint="@color/icon"
            android:src="@android:drawable/ic_delete"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <com.example.titan.dyscalculator.customButton
            android:id="@+id/b4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:background="@drawable/buttonnumber"
            android:text="4"
            />
        <com.example.titan.dyscalculator.customButton
            android:id="@+id/b5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:background="@drawable/buttonnumber"
            android:text="5"
            />
        <com.example.titan.dyscalculator.customButton
            android:id="@+id/b6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:background="@drawable/buttonnumber"
            android:text="6"
            />
        <!--<com.example.titan.dyscalculator.customButton-->
            <!--android:id="@+id/bPlus"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_margin="0dp"-->
            <!--android:background="@drawable/buttoncharacter"-->
            <!--android:text=""/>-->
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/bPlus"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:background="@drawable/buttoncharacter"
            android:tint="@color/icon"
            android:src="@android:drawable/ic_input_add"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <com.example.titan.dyscalculator.customButton
            android:id="@+id/b1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:background="@drawable/buttonnumber"
            android:fontFamily=""
            android:text="1"
            />
        <com.example.titan.dyscalculator.customButton
            android:id="@+id/b2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:background="@drawable/buttonnumber"
            android:text="2"
            />
        <com.example.titan.dyscalculator.customButton
            android:id="@+id/b3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:background="@drawable/buttonnumber"
            android:text="3"
            />
        <com.example.titan.dyscalculator.customButton
            android:id="@+id/bMin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:background="@drawable/buttoncharacter"
            android:text="-"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <com.example.titan.dyscalculator.customButton
            android:id="@+id/b0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:layout_margin="0dp"
            android:background="@drawable/buttonnumber"
            android:text="0"
            />
        <com.example.titan.dyscalculator.customButton
            android:id="@+id/bComma"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:layout_margin="0dp"
            android:background="@drawable/buttoncharacter"
            android:text="," />
        <com.example.titan.dyscalculator.customButton
            android:id="@+id/bIs"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:layout_margin="0dp"
            android:background="@drawable/buttoncharacter"
            android:text="="
            />
    </LinearLayout>
</LinearLayout>